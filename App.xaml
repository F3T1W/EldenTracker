<Application
    x:Class="EldenTracker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver">Black</SolidColorBrush>
        <SolidColorBrush x:Key="ButtonForegroundPointerOver">Pink</SolidColorBrush>
        <Style x:Key="NavigationViewWithoutAnimation" TargetType="NavigationView">
            <Setter Property="IsPaneOpen" Value="False" />
            <Setter Property="CompactModeThresholdWidth" Value="350" />
            <Setter Property="OpenPaneLength" Value="350" />
            <Setter Property="CompactPaneLength" Value="40"/>
        </Style>
    </Application.Resources>
</Application>