<Page
    x:Class="EldenTracker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:EldenTracker.Resources.PointsOfInterest"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid>
            <ScrollViewer x:Name="ScrollViewer"
              ManipulationMode="All"
              ZoomMode="Enabled"
              HorizontalScrollMode="Enabled"
              VerticalScrollMode="Enabled"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Image x:Name="MapImage"
                           Source="Resources/Map/Images/FullMap.png"
                           Stretch="Uniform"/>
                    <ItemsControl ItemsSource="{x:Bind PointsOfInterest}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="local:PointOfInterest">
                                <local:PointOfInterestControl ImageSource="{x:Bind ImageSource}" XCoordinate="{x:Bind XCoordinate}" YCoordinate="{x:Bind YCoordinate}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>
        <Grid>
            <Grid x:Name="LeftPanelGrid"
                  Width="500"
                  HorizontalAlignment="Left"
                  Background="Black"
                  Visibility="Collapsed">
                <!--TODO: Add left panel content-->
            </Grid>
            <Grid x:Name="ButtonGrid"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="0, 40, 0, 0">
                <Button x:Name="ToggleGridButton"
                        Content="Show Grid"
                        Background="Black"/>
            </Grid>
        </Grid>
    </Grid>
</Page>