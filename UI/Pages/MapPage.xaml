<Page x:Class="EldenTracker.UI.Pages.MapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:EldenTracker.UI.Controls"
      xmlns:model="using:EldenTracker.Model"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <controls:ScrollableImage x:Name="Map"
                                  RightTapped="OnRightTapped"/>

        <ItemsControl ItemsSource="{x:Bind PointsOfInterest}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="model:PointOfInterest">
                    <controls:PointOfInterest ImageSource="{x:Bind ImageSource}" 
                                              XCoordinate="{x:Bind XCoordinate}" 
                                              YCoordinate="{x:Bind YCoordinate}"
                                              Clicked="OnPointOfInterestControlClicked"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
